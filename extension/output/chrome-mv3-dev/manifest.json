{
  "manifest_version": 3,
  "name": "Magneto ðŸ§° dev",
  "description": "Scrapes, collects and stores magnet links locally.",
  "version": "3.0.2",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png",
    "1024": "icons/1024.png",
    "2048": "icons/2048.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "sidePanel",
    "scripting"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Magneto popup",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}